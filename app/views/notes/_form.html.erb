<div class="note-form" >
  <%= simple_form_for(@note) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, class: 'title_input'%>
      <%= f.input :content, as: :text, class: 'content_text' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
