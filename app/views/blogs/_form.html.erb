<div class="form-inline" >
	<%= simple_form_for(@blog) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
	  	<%= f.input :title %>
	  	<%= f.input :content, as: :text %>
	  	<%= f.input :posting_date, label: "Date" %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
</div>